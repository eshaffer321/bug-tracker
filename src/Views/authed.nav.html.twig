{% block nav %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="#">Bug Tracker</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item {% block activebugs %}{% endblock %}">
                    <a class="nav-link" href="/bugs">Bugs {% block bugspan %}{% endblock %}</a>
                </li>
                <li class="nav-item {% block activeproducts %}{% endblock %}">
                    <a class="nav-link" href="/products">Products {% block productspan %}{% endblock %}</a>
                </li>
                <li class="nav-item {% block activeusers %}{% endblock %}">
                    <a class="nav-link" href="/users">Users {% block userspan %}{% endblock %}</a>
                </li>
                <li class="nav-item {% block activereport %}{% endblock %}">
                    <a class="nav-link" href="/reports">Reports {% block reportspan %}{% endblock %}</a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                <a class="nav-link" href="#" id="logout">Logout</a>
            </form>
        </div>
    </nav>
{% endblock %}